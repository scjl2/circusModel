--Priority Queue

nametype SThread = Seq(ThreadID)

MaxPriority = 2
MinPriority = 0

nametype PriorityLevel = {MinPriority..MaxPriority}

PriorityQueue = 
	Map(PriorityLevel, SThread)


EmptyPriorityQueue = 
	mapFromList(< (0, <>), (1, <>) , (2,<>)  >)

--TestPQ = 
